FROM golang:1.20 AS builder

WORKDIR /app
COPY kit/ /app/

# Construir el servicio de usuario
WORKDIR /app/user
RUN go mod download
RUN make build

FROM debian:stable-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
        ca-certificates \
        netbase \
        && rm -rf /var/lib/apt/lists/ \
        && apt-get autoremove -y && apt-get autoclean -y

WORKDIR /app

# Copiar el binario y archivos necesarios
COPY --from=builder /app/user/bin/user /app/
COPY kit/user/i18n /app/i18n
COPY configs/user /data/conf

EXPOSE 8000
EXPOSE 9000
VOLUME /data/conf

CMD ["./user", "-conf", "/data/conf"]