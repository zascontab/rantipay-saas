# Configuración global para Rantipay SaaS

# Configuraciones generales
ENV=dev
SERVICE_NAME=rantipay-saas
LOG_LEVEL=debug

# Configuración de base de datos
DB_HOST=postgres
DB_PORT=5433  # Cambiado de 5432 a 5433 para evitar conflicto con tu instancia local
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=go_saas
DB_SCHEMA=public
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600s

# Configuración de Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=go-saas-group
KAFKA_AUTO_OFFSET_RESET=earliest

# Configuración de JWT
JWT_SECRET=your-very-secret-key-change-in-production
JWT_DURATION=24h
JWT_REFRESH_DURATION=720h

# Configuración del Gateway
GATEWAY_HTTP_ADDR=0.0.0.0:8000
OTEL_EXPORTER_OTLP_ENDPOINT=jaeger:4318

# Configuración de Auth Service
AUTH_HTTP_ADDR=0.0.0.0:8081
AUTH_GRPC_ADDR=0.0.0.0:9091

# Configuración de Tenant Service
TENANT_HTTP_ADDR=0.0.0.0:8082
TENANT_GRPC_ADDR=0.0.0.0:9092

# Configuración de Plan Service
PLAN_HTTP_ADDR=0.0.0.0:8083
PLAN_GRPC_ADDR=0.0.0.0:9093

# Configuración de Billing Service
BILLING_HTTP_ADDR=0.0.0.0:8084
BILLING_GRPC_ADDR=0.0.0.0:9094

# Configuración inicial para tenant por defecto
DEFAULT_TENANT_NAME=rantipay
DEFAULT_ADMIN_USERNAME=admin@rantipay.com
DEFAULT_ADMIN_PASSWORD=Admin123!

# Configuración CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token




#DOCKER_REGISTRY=ghcr.io/go-saas/
#DOCKER_TAG=latest

# MySQL
MYSQL_ROOT_PASSWORD=youShouldChangeThis

# Redis
REDIS_PASSWORD=youShouldChangeThis


# Vaciar el DOCKER_REGISTRY para usar imágenes locales
DOCKER_REGISTRY=
DOCKER_TAG=latest